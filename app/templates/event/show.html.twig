{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}</h1>
    {% if event is defined and event|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ event.id }}</dd>
            <dt>{{ 'label.startDate'|trans }}</dt>
            <dd>{{ event.startDate|date('Y/m/d') }}</dd>
            <dt>{{ 'label.endDate'|trans }}</dt>
            <dd>{{ event.endDate|date('Y/m/d') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  event.title }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  event.category.title }}</dd>
        </dl>
        <p>
            <a class="btn btn-primary" href="{{ url('event_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
            <a class="btn btn-warning" href="{{ url('event_edit', {id: event.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
            <a class="btn btn-danger" href="{{ url('event_delete', {id: event.id}) }}" title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}